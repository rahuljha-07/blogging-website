<%- include ('../partials/header'); -%>
   <div class="container">
        <h1 class="text-center" style="margin-top: 65px; color: white;"  >Edit <%= post.name %></h1>
        <div style="width: 30%;margin:30px auto;">
           <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
               <div class="form-group"><input class="form-control" type="text" name="post[name]" value="<%= post.name %>"></div>
               <div class="form-group"><input class="form-control" type="text" name="post[image]" value="<%= post.image %>"></div>
               <div class="form-group"><input class="form-control" type="text" name="post[description]" value="<%= post.description %>"></div>
               <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit!</button></div>
           </form>
           <a class="font-italic" href="/posts">Go Back</a>
         </div>
    </div>
